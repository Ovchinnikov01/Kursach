{
  "devDependencies": {
    "postcss": "^8.4.38",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.1.6"
  },
  "dependencies": {
    "flowbite": "^2.0.0"
  },
  "scripts": {
    "build-css": "tailwindcss build -i ./static/src/input.css -o ./static/dist/css/output.css",
  "watch-css": "tailwindcss build -i ./static/src/input.css -o ./static/dist/css/output.css --watch",
  "dev": "concurrently \"npm run watch-css\" \"npm start\""
  }
}
